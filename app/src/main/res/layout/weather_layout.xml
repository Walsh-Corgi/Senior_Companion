<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3E4FF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:text="一键呼救"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_voice_report"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_play_circle"
        android:contentDescription="点击进行语音播报"/>

    <TextView
        android:id="@+id/tv_weather_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_emergency"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="天气预报"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_weather_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weather_title"
        android:layout_centerHorizontal="true"
        android:text="Weather"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="italic" />

    <FrameLayout
        android:id="@+id/weather_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/tv_weather_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="返回"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="10dp"
        android:backgroundTint="#000000"/>

</RelativeLayout>