<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    tools:context=".WeatherActivity">

    <!-- Emergency Button -->
    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/red_button"
        android:text="一键呼救"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="10dp" />

    <!-- Voice Report Button -->
    <ImageButton
        android:id="@+id/btn_voice_report"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_button"
        android:src="@android:drawable/ic_media_play"
        android:padding="10dp" />

    <!-- Weather Report Title -->
    <TextView
        android:id="@+id/tv_weather_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_emergency"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="天气预报"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_weather_title_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weather_title"
        android:layout_centerHorizontal="true"
        android:text="Weather"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Weather Report Frame -->
    <FrameLayout
        android:id="@+id/fl_weather_report"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/tv_weather_title_english"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="8dp">
        <!-- Weather data will be dynamically added here -->
    </FrameLayout>

    <!-- Return Button -->
    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_weather_report"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="返回"
        android:onClick="onReturnClick"/>
</RelativeLayout>
