<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:text="一键呼救"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_voice_report"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_play_circle"
        android:contentDescription="点击进行语音播报"/>

    <!--suppress AndroidUnresolvableTag -->
    <ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iv_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_button"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心率"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iv_blood_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_circle"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_blood_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血压"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iv_blood_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_blood_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血糖"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ViewPager>

    <ImageView
        android:id="@+id/btn_generate_report"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/rounded_rectangle"
        android:contentDescription="生成报告"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/btn_start_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="开始检测"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="10dp"
        android:backgroundTint="#000000"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_start_test"
        android:layout_below="@id/viewPager"
        android:layout_marginTop="20dp"
        android:text="退"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="10dp"
        android:backgroundTint="#000000"/>

</RelativeLayout>