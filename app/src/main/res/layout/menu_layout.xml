<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 一键呼救按钮 -->
    <Button
        android:id="@+id/emergency_call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一键呼救"
        android:background="@drawable/rounded_rectangle"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- 语音播报按钮 -->
    <Button
        android:id="@+id/voice_broadcast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="语音播报"
        android:background="@drawable/rounded_rectangle"
        android:layout_below="@id/emergency_call_button"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- 主体按钮区域 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice_broadcast_button"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">

        <!-- 健康按钮 -->
        <Button
            android:id="@+id/health_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="健康"
            android:background="@drawable/rounded_rectangle"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 日程按钮 -->
        <Button
            android:id="@+id/schedule_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="日程"
            android:background="@drawable/rounded_rectangle"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 新闻按钮 -->
        <Button
            android:id="@+id/news_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="新闻"
            android:background="@drawable/rounded_rectangle"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 天气按钮 -->
        <Button
            android:id="@+id/weather_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="天气"
            android:background="@drawable/rounded_rectangle"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />
    </GridLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_rectangle">

        <!-- Home按钮 -->
        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 健康按钮 -->
        <Button
            android:id="@+id/nav_health_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="健康"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 日程按钮 -->
        <Button
            android:id="@+id/nav_schedule_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日程"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 语音按钮 -->
        <Button
            android:id="@+id/nav_voice_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="语音"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

        <!-- 更多按钮 -->
        <Button
            android:id="@+id/nav_more_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更多"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>
