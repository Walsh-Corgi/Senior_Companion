<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".MainActivity">

    <!-- Emergency Button -->
    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/red_button"
        android:text="一键呼救"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="10dp" />

    <!-- Voice Report Button -->
    <Button
        android:id="@+id/btn_voice_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_emergency"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_button_1"
        android:text="点击进行语音播报"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:padding="10dp" />

    <!-- Instructions Text -->
    <TextView
        android:id="@+id/tv_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_voice_report"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="点击下列图标"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_instructions_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_instructions"
        android:layout_centerHorizontal="true"
        android:text="CLICK ON THE FOLLOWING ICONS"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Icon Buttons Grid -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_instructions_english"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:rowCount="2"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- Health Button -->
        <Button
            android:id="@+id/btn_health"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_rectangle_1"
            android:text="健康"
            android:textSize="18sp"

            android:gravity="center"
            android:layout_margin="10dp" />

        <!-- Schedule Button -->
        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_rectangle_1"
            android:text="日程"
            android:textSize="18sp"

            android:gravity="center"
            android:layout_margin="10dp" />

        <!-- Weather Button -->
        <Button
            android:id="@+id/btn_weather"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_rectangle_1"
            android:text="天气"
            android:textSize="18sp"

            android:gravity="center"
            android:layout_margin="10dp" />

        <!-- News Button -->
        <Button
            android:id="@+id/btn_news"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_rectangle_1"
            android:text="新闻"
            android:textSize="18sp"

            android:gravity="center"
            android:layout_margin="10dp" />
    </GridLayout>

</RelativeLayout>
